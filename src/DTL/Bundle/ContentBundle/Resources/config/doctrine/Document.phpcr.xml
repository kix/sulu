<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <mapped-superclass name="DTL\Bundle\ContentBundle\Document\Document" referenceable="true" translator="attribute">
        <uuid name="uuid" />
        <id name="path" />
        <nodename name="name" />
        <parent-document name="parent" />
        <children name="children" />
        <node name="node" />
        <locale name="locale" />
        <depth name="depth" />

        <field name="title" type="string" translated="true" />
        <field name="structureType" property="type" type="string" translated="true" />
        <field name="resourceLocator" property="resource-locator" type="string" translated="true" />
        <field name="creator" type="long" translated="true" nullable="true" />
        <field name="changer" type="long" translated="true" nullable="true" />
        <field name="created" type="date" translated="true" />
        <field name="changed" type="date" translated="true" />
        <field name="workflowState" property="workflow-state" type="long" translated="true" nullable="true"/>
    </mapped-superclass>

</doctrine-mapping>
