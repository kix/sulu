<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dtl_content.structure.factory.class">DTL\Component\Content\Structure\Factory\StructureFactory</parameter>
        <parameter key="dtl_content.structure.loader.xml.class">DTL\Component\Content\Structure\Loader\XmlLoader</parameter>
    </parameters>

    <services>
        <service id="dtl_content.structure.factory" class="%dtl_content.structure.factory.class%">
            <argument type="service" id="dtl_content.structure.loader.xml" />
            <argument>%dtl_content.structure.paths%</argument>
            <argument>%kernel.root_dir%/cache/dtl</argument>
            <argument>%kernel.debug%</argument>
        </service>

        <service id="dtl_content.structure.loader.xml" class="%dtl_content.structure.loader.xml.class%" />
    </services>

</container>


