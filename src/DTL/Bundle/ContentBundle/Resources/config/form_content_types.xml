<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="dtl_content.form.type.property" class="DTL\Bundle\ContentBundle\Form\Type\Property\PropertyType">
            <tag name="form.type" alias="property" />
        </service>

        <service id="dtl_content.form.type.property_collection" class="DTL\Bundle\ContentBundle\Form\Type\Property\PropertyCollectionType">
            <tag name="form.type" alias="property_collection" />
        </service>

        <service id="dtl_content.form.type.resource_locator" class="DTL\Bundle\ContentBundle\Form\Type\Property\ResourceLocatorType">
            <tag name="form.type" alias="resource_locator" />
        </service>

        <service id="dtl_content.form.type.text_area" class="DTL\Bundle\ContentBundle\Form\Type\Property\TextAreaType">
            <tag name="form.type" alias="text_area" />
        </service>

        <service id="dtl_content.form.type.text_editor" class="DTL\Bundle\ContentBundle\Form\Type\Property\TextEditorType">
            <tag name="form.type" alias="text_editor" />
        </service>

        <service id="dtl_content.form.type.text_line" class="DTL\Bundle\ContentBundle\Form\Type\Property\TextLineType">
            <tag name="form.type" alias="text_line" />
        </service>

        <service id="dtl_content.form.type.block" class="DTL\Bundle\ContentBundle\Form\Type\Property\BlockType">
            <argument type="service" id="dtl_content.front_view.builder" />
            <tag name="form.type" alias="block" />
        </service>

    </services>
</container>

