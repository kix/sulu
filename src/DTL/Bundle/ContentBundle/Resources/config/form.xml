<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- document field type -->
        <service id="dtl_content.form.factory.document_type" class="DTL\Bundle\ContentBundle\Form\Type\Base\DocumentObjectType">
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <tag name="form.type" alias="document_object" />
        </service>

        <!-- Structure form type factory -->
        <service id="dtl_content.form.factory.structure_type" class="DTL\Component\Content\Structure\Form\StructureFormTypeFactory">
            <argument type="service" id="dtl_content.structure.factory" />
            <argument type="service" id="form.factory" />
        </service>

        <!-- Form structure types -->
        <service id="dtl_content.form.type.page" class="DTL\Bundle\ContentBundle\Form\Type\Document\PageDocumentType">
            <argument type="service" id="dtl_content.form.factory.structure_type"/>
            <argument type="service" id="sulu.phpcr.session" />
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <tag name="form.type" alias="page" />
        </service>

        <service id="dtl_content.form.type.homepage" class="DTL\Bundle\ContentBundle\Form\Type\Document\HomepageDocumentType">
            <argument type="service" id="dtl_content.form.factory.structure_type"/>
            <argument type="service" id="sulu.phpcr.session" />
            <argument type="service" id="doctrine_phpcr.odm.document_manager" />
            <tag name="form.type" alias="homepage" />
        </service>

        <service id="dtl_content.form.type.snippet" class="DTL\Component\Content\Form\Type\SnippetType">
            <tag name="form.type" alias="snippet" />
        </service>

        <!-- FrontViewBuilder -->
        <service id="dtl_content.front_view.builder" class="DTL\Component\Content\FrontView\FrontViewBuilder">
            <argument type="service" id="dtl_content.structure.factory"/>
            <argument type="service" id="dtl_content.property.registry"/>
        </service>

    </services>
</container>

