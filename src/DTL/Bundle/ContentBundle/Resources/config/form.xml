<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Custom form factory and registry for content reendering -->

        <!-- Somethin: Will probably remove this as we will not render content using forms -->
        <service id="dtl_content.form.resolved_type_factory" class="DTL\Component\Content\Form\ResolvedFormTypeFactory"/>

        <!-- DependencyInjectionExtension -->
        <service id="dtl_content.form.extension" class="%form.extension.class%" public="false">
            <argument type="service" id="service_container" />
            <!-- All services with tag "form.type" are inserted here by FormPass -->
            <argument type="collection" />
            <!-- All services with tag "form.type_extension" are inserted here by FormPass -->
            <argument type="collection" />
            <!-- All services with tag "form.type_guesser" are inserted here by FormPass -->
            <argument type="collection" />
        </service>

        <service id="dtl_content.form.registry" class="%form.registry.class%">
            <argument type="collection">
                <argument type="service" id="dtl_content.form.extension" />
            </argument>
            <argument type="service" id="form.resolved_type_factory" />
        </service>

        <service id="dtl_content.form.factory" class="%form.factory.class%">
            <argument type="service" id="dtl_content.form.registry" />
            <argument type="service" id="dtl_content.form.resolved_type_factory" />
        </service>

        <!-- Structure form type factory -->
        <service id="dtl_content.form.factory.structure_type" class="DTL\Component\Content\Form\Factory\StructureFormTypeFactory">
            <argument type="service" id="dtl_content.structure.factory" />
            <argument type="service" id="dtl_content.form.factory" />
        </service>

        <!-- Form structure types -->
        <service id="dtl_content.form.type.page" class="DTL\Bundle\ContentBundle\Form\Type\Document\PageDocumentType">
            <argument type="service" id="dtl_content.form.factory.structure_type"/>
            <tag name="form.type" alias="page" />
        </service>

        <service id="dtl_content.form.type.snippet" class="DTL\Component\Content\Form\Type\SnippetType">
            <tag name="form.type" alias="snippet" />
        </service>

        <!-- Content view resolver (for frontend) -->
        <service id="dtl_content.form.content_view_resolver" class="DTL\Component\Content\Form\ContentViewResolver">
            <argument type="service" id="dtl_content.form.factory"/>
        </service>

    </services>
</container>

